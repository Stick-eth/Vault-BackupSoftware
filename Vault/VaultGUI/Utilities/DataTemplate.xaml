<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:VaultGUI.ViewModel"
                    xmlns:view="clr-namespace:VaultGUI.View">

    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:BackupsVM}">
        <view:Backups />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ConfigurationVM}">
        <view:Configuration />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <view:Settings />
    </DataTemplate>

</ResourceDictionary>